<Page
    x:Class="EvendlerEditor.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EvendlerEditor"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


    <Grid >

        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <ScrollViewer Grid.RowSpan="1" Grid.Row="1" Grid.ColumnSpan="5" 
                      ZoomMode="Enabled" 
                      HorizontalContentAlignment="Center" 
                      VerticalContentAlignment="Center"
                      HorizontalScrollBarVisibility="Visible" 
                      VerticalScrollMode="Enabled" 
                      HorizontalScrollMode="Enabled">
            
        <Canvas x:Name="C_MAINGRID"  Width="4096" Height="4096"/>
        </ScrollViewer>
        <Grid Margin="10,0,0,0" Grid.Row="0" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="48"/>
                <ColumnDefinition Width="48"/>
                <ColumnDefinition Width="48"/>
                <ColumnDefinition Width="48"/>
                <ColumnDefinition Width="48"/>
                <ColumnDefinition Width="48"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <AppBarButton x:Name="C_BUTTON_ADD_ENTITY" Label="ADD" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="48" Height="48" FontSize="24" FontWeight="Bold" Icon="Add" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" Click="C_BUTTON_ADD_ENTITY_Click"/>
            <AppBarButton x:Name="C_BUTTON_SAVE_ENTITY" Label="SAVE" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="48" Height="48" FontSize="24" FontWeight="Bold" Icon="Save" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" Grid.Column="1" Click="C_BUTTON_SAVE_ENTITY_Click"/>
            <AppBarButton x:Name="C_BUTTON_LOAD_ENTITY" Label="LOAD" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="48" Height="48" FontSize="24" FontWeight="Bold" Icon="Document" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" Grid.Column="2" Click="C_BUTTON_LOAD_ENTITY_Click"/>
            <AppBarButton x:Name="C_BUTTON_IMPORT_ENTITY" Label="CART" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="48" Height="48" FontSize="24" FontWeight="Bold" Icon="Import" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" Grid.Column="3"/>
            <AppBarButton x:Name="C_BUTTON_GENCODE_ENTITY" Label="CODE" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="48" Height="48" FontSize="24" FontWeight="Bold"  VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" Grid.Column="4" Icon="Keyboard" Click="C_BUTTON_GENCODE_ENTITY_Click"/>

        </Grid>
    </Grid>
</Page>
